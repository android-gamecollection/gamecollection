<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/promotion_queen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/game_chess_queen_w" />

    <ImageView
        android:id="@+id/promotion_bishop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/game_chess_bishop_w" />

    <ImageView
        android:id="@+id/promotion_knight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/game_chess_knight_w" />

    <ImageView
        android:id="@+id/promotion_rook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/game_chess_rook_w" />

</LinearLayout>
