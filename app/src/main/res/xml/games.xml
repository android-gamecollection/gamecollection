<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE games [
    <!ELEMENT games (boardgames, cardgames)>
    <!ELEMENT boardgames (game*)>
    <!ELEMENT cardgames (game*)>
    <!ELEMENT game EMPTY>
    <!ATTLIST game title CDATA #REQUIRED>
    <!ATTLIST game description CDATA #REQUIRED>
    <!ATTLIST game icon CDATA #REQUIRED>
    <!ATTLIST game rules CDATA #REQUIRED>
    <!ATTLIST game activity CDATA #REQUIRED>
]>
<games>

    <boardgames>

        <game
            title="Schach"
            description="Klassisches Schach"
            icon="@mipmap/ic_launcher"
            rules="no rules"
            activity="Chess" />

        <game
            title="Schach"
            description="Schach mit Konsole"
            icon="@mipmap/ic_launcher"
            rules="no rules"
            activity="ConsoleChess" />

    </boardgames>

    <cardgames>

        <game
            title="Bauernkrieg"
            description="Einfaches Stechen"
            icon="@mipmap/ic_launcher"
            rules="@string/bauernkrieg_regeln"
            activity="BauernkriegMenu" />

        <game
            title="Mau Mau"
            description="Klassisches Trumpfkartenspiel"
            icon="@mipmap/ic_launcher"
            rules="@string/maumau_regeln"
            activity="MauMauMenu" />

        <game
            title="Offiziersschafkopf"
            description="2 Personen Schafkopf"
            icon="@mipmap/ic_launcher"
            rules="no rules"
            activity="schafkopf" />

    </cardgames>

</games>
