<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="todo.spielesammlungprototyp">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".view.activity.Hub">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".view.activity.ConsoleChess"
            android:windowSoftInputMode="stateVisible">
        </activity>

        <activity
            android:name=".view.activity.Chess">
        </activity>

        <activity
            android:name=".view.activity.BauernkriegMenu">
        </activity>

        <activity
            android:name=".model.games.bauernkrieg.Bauernkrieg"
            android:label="@string/bauernkrieg">
        </activity>

        <activity
            android:name=".view.activity.MauMauMenu">
        </activity>

        <activity
            android:name=".model.games.maumau.MauMau"
            android:label="@string/maumau"
            android:screenOrientation="landscape">
        </activity>

        <activity
            android:name=".view.activity.schafkopf"
            android:label="@string/schafkopf">
        </activity>

        <activity
            android:name=".view.activity.Settings"
            android:label="@string/title_activity_settings">
        </activity>

    </application>

</manifest>