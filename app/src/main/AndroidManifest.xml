<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="todo.spielesammlungprototyp">

    <!-- durch Definiton von Parent und Child ist der "Zurückknopf" oben links in der App möglich -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Hub -->
        <activity android:name=".activity._Hub">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Brettspiele -->
        <activity
            android:name=".activity.Brettspiele"
            android:label="@string/brettspiele"
            android:windowSoftInputMode="stateVisible">
        </activity>
        <activity
            android:name=".activity.ChessActivity"
            android:label="Schach">
        </activity>

        <!-- Kartenspiele -->
        <activity
            android:name=".activity.Bauernkrieg"
            android:label="@string/bauernkrieg">
        </activity>
    </application>

</manifest>